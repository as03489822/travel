
<% if (success && success.length){ %>
    <div class="alert alert-success alert-dismissible  pt-1 pb-1 col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3" role="alert">
        <strong><%= success %></strong>
        <button type="button" class="btn-close pt-2 pb-2" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
<% } %>

<% if (error && error.length){ %>
  <div class="alert alert-danger alert-dismissible  pt-1 pb-1 col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3" role="alert">
      <strong><%= error %></strong>
      <button type="button" class="btn-close pt-2 pb-2" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
